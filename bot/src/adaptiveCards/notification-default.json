{
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "type": "AdaptiveCard",
  "version": "1.4",
  "body": [
    {
      "type": "TextBlock",
      "text": "Asset ${asset_id} is modified",
      "size": "Large",
      "weight": "Bolder",
      "wrap": true
    },
    {
      "type": "TextBlock",
      "text": "Modified by ${modified_by}",
      "isSubtle": true,
      "color": "Accent",
      "weight": "Bolder",
      "size": "Small",
      "spacing": "None"
    },
    {
      "type": "TextBlock",
      "text": "Modified at ${modified_at}",
      "isSubtle": true,
      "wrap": true
    }
  ],
  "actions": [
    {
      "type": "Action.OpenUrl",
      "title": "View Details",
      "url": "${link}"
    }
  ]
}